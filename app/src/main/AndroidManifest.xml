<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.sowrong.together">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.init.CreateGroupActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.init.JoinGroupActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.calendar.NewEditCalenderEntryActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.calendar.DetailsCalenderEntryActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.wallet.NewEditTransactionActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.wallet.ListTransactionsActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.shoppingList.NewEditShoppingListEntryActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>